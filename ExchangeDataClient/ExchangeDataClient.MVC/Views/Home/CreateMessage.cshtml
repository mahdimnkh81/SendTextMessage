@using ExchangeData.BLL.Models
@using Kendo.Mvc.UI
@using Kendo.Mvc.UI.Html
@model MessageModel



@{
    ViewBag.Title = "افزودن پیام";
}

<h2 class="message">افزودن پیام</h2>

<div class="formstyle">
    @using (Html.BeginForm("CreateMessage", "Home", FormMethod.Post))
    {
        <div class="form">
            <div class="row">
                @Html.LabelFor(parent => parent.Name, "نام")
                @Html.Kendo().TextBoxFor(x => x.Name).Name("Name").HtmlAttributes(new { @class = "form-control" })

            </div>

            <div class="row">
                @Html.LabelFor(parent => parent.PhoneNumber, "موبایل")
                @Html.Kendo().TextBoxFor(x => x.PhoneNumber).Name("PhoneNumber").HtmlAttributes(new { @class = "form-control" })
            </div>

            <div class="row">
                @Html.LabelFor(parent => parent.Email, "ایمیل")
                @Html.Kendo().TextBoxFor(x => x.Email).Name("Email").HtmlAttributes(new { @class = "form-control" })
            </div>

            <div class="row">
                @Html.LabelFor(parent => parent.MessageHeading, "عنوان پیام")
                @Html.Kendo().TextBoxFor(x => x.MessageHeading).Name("MessageHeading").HtmlAttributes(new { @class = "form-control" })
            </div>
            <div class="row">
                @Html.LabelFor(parent => parent.Message, "پیام")
                @Html.Kendo().TextBoxFor(x => x.Message).Name("Message").HtmlAttributes(new { @class = "form-control" })

            </div>
            <div class="buttonSave">
                <button type="submit" class="k-button k-insert">
                    ثبت
                </button>
            </div>
        </div>


    }

    <style>
        .message {
            direction: rtl;
            padding-right :1100px;
            margin-bottom:50px;
            font-size:xx-large;
        }

        .formstyle {
            padding-right: 150px;
        }

        .k-textbox.form-control {
            padding-left: 100px;
            /*background-color: burlywood;*/
            text-align: center;
        }

        .k-textbox.form-control2 {
            padding-left: 100px;
            padding-top: 200px;
            /*background-color: aquamarine;*/
            text-align: center;
        }

        .row {
            display: flex;
            flex-direction: row-reverse;
            align-items: center;
            justify-content: center;
            padding-bottom: 20px;
        }

        .form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding-top: 45px;
        }

        .row label {
            width: 50px;
            margin-left: 20px;
           
        }

        .k-textbox.form-control {
            width: 500px;
             text-align:right;
        }

        .buttonSave {
            display: flex;
            width: 350px;
            justify-content: flex-start;
        }

        .k-button {
            width: 100px;
            background-color: slategray;
        }
    </style>
